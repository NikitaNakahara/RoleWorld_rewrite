<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/window_bg"/>
        </shape>
    </item>
    <item android:width="20dp">
        <shape>
            <gradient
                android:startColor="@color/main_ui"
                android:endColor="@color/window_bg"/>
        </shape>
    </item>
    <item android:gravity="end" android:width="20dp">
        <shape>
            <gradient
                android:startColor="@color/window_bg"
                android:endColor="@color/main_ui"/>
        </shape>
    </item>
</layer-list>