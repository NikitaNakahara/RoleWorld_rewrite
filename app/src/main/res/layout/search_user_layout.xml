<?xml version="1.0" encoding="utf-8"?>
<com.nakaharadev.roleworld.ui.SearchUserLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingHorizontal="10dp">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/open_profile_icon"
        android:layout_marginEnd="20dp"
        android:id="@+id/search_user_avatar"
        android:layout_marginVertical="5dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/main_text"
        android:textSize="25sp"
        android:id="@+id/search_user_name"/>
</com.nakaharadev.roleworld.ui.SearchUserLayout>