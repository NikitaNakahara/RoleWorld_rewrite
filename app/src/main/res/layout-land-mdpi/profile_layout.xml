<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/main_layout_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp">
                <com.nakaharadev.roleworld.ui.AnimatedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/open_profile_icon"
                    android:id="@+id/profile_avatar"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/round_load_bar"
                    android:padding="20dp"
                    android:visibility="gone"
                    android:id="@+id/load_avatar_bar"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="25dp">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/main_text"
                    android:id="@+id/profile_nickname"
                    android:layout_marginBottom="15dp"
                    android:singleLine="true"
                    android:paddingHorizontal="4dp"
                    android:background="@color/window_bg"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_text"
                    android:textSize="17sp"
                    android:id="@+id/profile_email"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:paddingHorizontal="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="id: "
                        android:textColor="@color/main_text"
                        android:textSize="17sp"
                        android:paddingStart="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text"
                        android:textSize="17sp"
                        android:id="@+id/profile_id"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@color/divider"
            android:dividerPadding="10dp"
            android:layout_weight="1">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_friends_list">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/you_dont_have_friends"
                        android:textColor="@color/gray_text"
                        android:gravity="center"
                        android:textSize="15sp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/exit_from_account"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:id="@+id/profile_account_exit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/profile_characters_list">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_dont_have_characters"
                    android:textColor="@color/gray_text"
                    android:textSize="15sp"
                    android:id="@+id/profile_characters_list_empty"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>